generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// WhatsApp Account Model (para el sistema Anti-Ban)
model WhatsAppAccount {
  id                String   @id @default(uuid())
  phoneNumber       String   @unique
  qualityRating     Float    @default(100.0) // 0-100 escala de calidad
  healthScore       Float    @default(100.0) // 0-100 escala de salud
  status            String   @default("HEALTHY") // HEALTHY, WARN, BLOCKED
  messagingLimitTier String   @default("STANDARD") // STANDARD, ELEVATED, REDUCED 
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  @@map("whatsapp_accounts")
}

