{
  "name": "@dfs-invest-flow/source",
  "version": "2.1.0",
  "license": "UNLICENSED",
  "type": "module",
  "scripts": {
    "nx": "nx",
    "build": "nx run-many --target=build",
    "lint": "nx run-many --target=lint",
    "lint:fix": "nx run-many --target=lint --fix",
    "test": "nx run-many --target=test",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md,yaml,yml,html,css,scss}\" --ignore-path .gitignore",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md,yaml,yml,html,css,scss}\" --ignore-path .gitignore",
    "type-check": "nx run-many --target=type-check",
    "commit": "cz",
    "prepare": "husky install",
    "graph": "nx graph",
    "show:projects": "nx show projects",
    "affected:lint": "nx affected --target=lint",
    "affected:test": "nx affected --target=test",
    "affected:build": "nx affected --target=build",
    "prisma:migrate:dev": "bunx prisma migrate dev --schema=./prisma/schema.prisma",
    "prisma:generate": "bunx prisma generate --schema=./prisma/schema.prisma",
    "prisma:studio": "bunx prisma studio --schema=./prisma/schema.prisma",
    "test:db": "bun ./tools/scripts/test-db-connection.ts",
    "test:unit:domain": "bunx jest --config libs/domain/jest.config.cjs --runInBand --detectOpenHandles --coverage",
    "test:unit:shared": "bunx jest --config libs/shared/jest.config.cjs --runInBand --detectOpenHandles --coverage",
    "test:unit:app": "bunx jest --config libs/application/jest.config.cjs --passWithNoTests --runInBand --detectOpenHandles --coverage",
    "test:integration:prisma": "bunx jest --config libs/infrastructure/jest.config.cjs --testPathPattern=prisma-whatsapp-account.repository.integration-spec.ts --runInBand --detectOpenHandles --coverage",
    "test:integration:redis": "bunx jest --config libs/infrastructure/jest.config.cjs --testPathPattern='redis-.*adapter\\.integration-spec\\.ts' --runInBand --detectOpenHandles --coverage",
    "test:all:local": "bun run test:unit:domain && bun run test:unit:shared && bun run test:unit:app && echo 'INFO: Run prisma:migrate:dev manually if needed' && bun run test:integration:prisma && bun run test:integration:redis",
    "verify:all:local": "bun run format:check && bun run lint --skip-nx-cache && bun run type-check --skip-nx-cache && bun run build --skip-nx-cache && bun run test:all:local"
  },
  "private": true,
  "lint-staged": {},
  "devDependencies": {
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@eslint/js": "^9.26.0",
    "@jest/globals": "^29.7.0",
    "@nestjs/schematics": "^10.2.3",
    "@nestjs/testing": "^11.1.0",
    "@nx/eslint": "20.8.1",
    "@nx/jest": "20.8.1",
    "@nx/js": "20.8.1",
    "@nx/nest": "^20.8.1",
    "@nx/node": "20.8.1",
    "@nx/playwright": "20.8.1",
    "@nx/web": "20.8.1",
    "@nx/webpack": "20.8.1",
    "@swc-node/register": "~1.9.1",
    "@swc/core": "~1.5.7",
    "@swc/helpers": "~0.5.11",
    "@testcontainers/redis": "^10.25.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/ioredis": "^5.0.0",
    "@types/jest": "^29.5.12",
    "@types/node": "18.16.9",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "bun-types": "latest",
    "commitizen": "^4.3.0",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "3.3.0",
    "dotenv": "^16.4.5",
    "eslint": "^9.25.1",
    "eslint-config-prettier": "^10.1.2",
    "eslint-import-resolver-typescript": "^4.3.4",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jest": "^28.11.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-perfectionist": "^4.12.3",
    "eslint-plugin-prettier": "^5.2.6",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-sonarjs": "^3.0.2",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "jsonc-eslint-parser": "^2.4.0",
    "lint-staged": "^15.5.1",
    "nx": "20.8.1",
    "playwright": "^1.52.0",
    "prettier": "^3.5.3",
    "prisma": "^6.7.0",
    "testcontainers": "^10.9.0",
    "ts-jest": "^29.1.0",
    "ts-node": "10.9.1",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.19.0",
    "webpack-cli": "^5.1.4"
  },
  "peerDependencies": {
    "@nestjs/common": "*"
  },
  "workspaces": [],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@nestjs/axios": "^4.0.0",
    "@nestjs/bullmq": "^11.0.2",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.0",
    "@nestjs/event-emitter": "^3.0.1",
    "@nestjs/platform-express": "^11.1.0",
    "@prisma/client": "^6.7.0",
    "axios": "^1.9.0",
    "bullmq": "^5.52.1",
    "ioredis": "^5.6.1",
    "rate-limiter-flexible": "^7.1.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.0",
    "tslib": "^2.3.0"
  }
}
