{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "declaration": true,
    "declarationMap": true,
    "types": ["node"]
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "jest.config.cjs",
    "tsconfig.spec.json",
    "tsconfig.integration.json",
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "src/**/*.integration-spec.ts"
  ]
}
