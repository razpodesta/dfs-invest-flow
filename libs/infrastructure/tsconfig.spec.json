{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "target": "ES2021",
    "sourceMap": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "types": ["jest", "node"],
    "verbatimModuleSyntax": false
  },
  "include": [
    "jest.config.cjs",
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "src/**/*.integration-spec.ts",
    "src/**/*.d.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
