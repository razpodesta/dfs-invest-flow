{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug API",
      "program": "${workspaceFolder}/node_modules/@nx/js/src/executors/node/node-executor.js",
      "args": ["api:serve"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Current Test File",
      "runtimeExecutable": "bun",
      "runtimeArgs": ["test", "--inspect", "${file}"],
      "internalConsoleOptions": "neverOpen"
    }
  ]
}
