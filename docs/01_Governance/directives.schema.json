{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "DirectiveStandardFormatV1",
  "type": "object",
  "required": ["directives", "version", "lastUpdated"],
  "properties": {
    "directives": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "title", "description", "status", "priority", "createdAt"],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^DFS-[A-Z]+-\d{3}-P[1-5]$",
            "description": "Identificador único. Formato: DFS-AREA-NUM-PRIORIDAD"
          },
          "title": {
            "type": "string",
            "minLength": 5,
            "maxLength": 100
          },
          "description": {
            "type": "string",
            "minLength": 10
          },
          "status": {
            "type": "string",
            "enum": ["Propuesta", "Activa", "Deprecada", "Rechazada"]
          },
          "priority": {
            "type": "integer",
            "minimum": 1,
            "maximum": 5,
            "description": "Nivel de prioridad (1: Crítica, 5: Deseable)"
          },
          "tags": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time"
          },
          "relatedDirectives": {
            "type": "array",
            "items": {
              "type": "string",
              "pattern": "^DFS-[A-Z]+-\d{3}-P[1-5]$"
            }
          }
        }
      }
    },
    "version": {
      "type": "string",
      "pattern": "^v\d+\.\d+$"
    },
    "lastUpdated": {
      "type": "string",
      "format": "date-time"
    }
  }
}
